<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- EditTexts for all data types -->
        <EditText
            android:id="@+id/booleanInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter boolean (true/false)" />

        <EditText
            android:id="@+id/charInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter char" />

        <EditText
            android:id="@+id/byteInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter byte" />

        <EditText
            android:id="@+id/shortInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter short" />

        <EditText
            android:id="@+id/intInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter int" />

        <EditText
            android:id="@+id/longInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter long" />

        <EditText
            android:id="@+id/floatInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter float" />

        <EditText
            android:id="@+id/doubleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter double" />

        <!-- Submit button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="16dp" />

        <!-- TextView to display the values -->
        <TextView
            android:id="@+id/displayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
